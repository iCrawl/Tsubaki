{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "typings",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "es2015",
		"lib": ["ESNext"],
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"outDir": "dist"
	},
	"exclude": ["test/**/*.test.ts", "test/**/*.spec.ts"]
}
